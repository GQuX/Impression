<UserControl x:Class="Impression.Controls.EmotionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Impression.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			 Background="Transparent"
			 Margin="20 0 20 4">

	<Grid Height="26">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="8"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Border Grid.Column="0"
				Background="{Binding Emotion.Color}"
				CornerRadius="3 0 0 3"/>

		<Border Grid.Column="1"
				Background="{StaticResource ColorBrush2}"
				CornerRadius="0 3 3 0">
			<Button x:Name="Button"
					Grid.Column="1"
					Content="{Binding Emotion.Name}"
					FontSize="20"
					Background="Transparent"
					FontWeight="SemiBold"
					FontFamily="{StaticResource FontFamily1}"
					BorderThickness="0"/>
		</Border>
	</Grid>
</UserControl>
