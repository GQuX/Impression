<Window x:Class="Impression.Views.EmotionEntryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Impression.Views"
		xmlns:viewModel="clr-namespace:Impression.ViewModels" xmlns:customcontrols="clr-namespace:Impression.CustomControls"
		mc:Ignorable="d"
        Title="EmotionEntryView" Height="550" Width="800"
		WindowStyle="None"
		ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen"
		Background="Transparent"
		AllowsTransparency="True">

	<Window.DataContext>
		<viewModel:LoginViewModel/>
	</Window.DataContext>

	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BooleanToVisibility"/>
	</Window.Resources>

	<Window.Visibility>
		<Binding Path="IsViewVisiable" Mode="TwoWay" Converter="{StaticResource BooleanToVisibility}"/>
	</Window.Visibility>
	
	<Border CornerRadius="12"
			Background="#f7eac7"
			Opacity="0.85"
			BorderThickness="2">
		<Border.BorderBrush>
			<LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
				<GradientStop Color="#a1672d" Offset="0.3"/>
				<GradientStop Color="#a1672d" Offset="0.4"/>
				<GradientStop Color="#a1672d" Offset="0.5"/>
			</LinearGradientBrush>
		</Border.BorderBrush>
		
		<Grid>
			<DockPanel x:Name="frm_topbar"
					   Grid.Row="3"
					   VerticalAlignment="Top"
					   HorizontalAlignment="Stretch"
					   Margin="8 8 8 0">
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="150"/>

						<ColumnDefinition/>

						<ColumnDefinition Width="25"/>
						<ColumnDefinition Width="5"/>
						<ColumnDefinition Width="25"/>
					</Grid.ColumnDefinitions>

					<Border Grid.Column="0"
							CornerRadius="8"
							Height="25" Width="150"
							Background="#a1672d"
							HorizontalAlignment="Left">
						<TextBlock Text="Impression"
								   x:Name="window_title"
								   Grid.Column="0"
								   Foreground="#f7eac7"
								   FontSize="16"
								   FontWeight="Bold"
								   FontFamily="Montserrat"
								   VerticalAlignment="Center"
								   Padding="12 0"/>
					</Border>

					<TextBlock Grid.Column="1"
						   MouseDown="topbar_MouseDown"/>

					<Button x:Name="btn_minimize"
							Content="-"
							BorderThickness="0"
							FontSize="16"
							FontFamily="Montserrat"
							FontWeight="Bold"
							Cursor="Hand"
							Grid.Column="2"
							Click="btn_minimize_Click">
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Background" Value="Transparent"/>
								<Setter Property="Foreground" Value="#a1672d"/>
								<Style.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Background" Value="#a1672d"/>
										<Setter Property="Foreground" Value="#f7eac7"/>
									</Trigger>
								</Style.Triggers>
							</Style>
						</Button.Style>

						<Button.Template>
							<ControlTemplate TargetType="Button">
								<Border Width="25" Height="25"
										CornerRadius="8"
										Background="{TemplateBinding Background}">
									<ContentPresenter VerticalAlignment="Center"
													  HorizontalAlignment="Center"/>
								</Border>

							</ControlTemplate>
						</Button.Template>
					</Button>

					<Button x:Name="btn_close"
							Content="x"
							BorderThickness="0"
							FontSize="16"
							FontFamily="Montserrat"
							FontWeight="Bold"
							Cursor="Hand"
							Grid.Column="4"
							Click="btn_close_Click">
						<Button.Style>
							<Style TargetType="Button">
								<Setter Property="Background" Value="Transparent"/>
								<Setter Property="Foreground" Value="#a1672d"/>
								<Style.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Background" Value="#a1672d"/>
										<Setter Property="Foreground" Value="#f7eac7"/>
									</Trigger>
								</Style.Triggers>
							</Style>
						</Button.Style>

						<Button.Template>
							<ControlTemplate TargetType="Button">
								<Border Width="25" Height="25"
										CornerRadius="8"
										Background="{TemplateBinding Background}">
									<ContentPresenter VerticalAlignment="Center"
													  HorizontalAlignment="Center"/>
								</Border>

							</ControlTemplate>
						</Button.Template>
					</Button>
				</Grid>
			</DockPanel>

			<StackPanel Grid.Row="1"
						Orientation="Vertical"
						Margin="25 60 25 35">
				<TextBlock Text="How's it going?"
						   Foreground="Black"
						   FontSize="30"
						   FontWeight="Bold"
						   FontFamily="Montserrat"
						   HorizontalAlignment="Center"
						   Margin="0 0 0 5"/>
				<TextBlock Text="Friday, December 13, 9:20 AM"
						   Foreground="#a1672d"
						   FontSize="15"
						   FontWeight="SemiBold"
						   FontFamily="Montserrat"
						   HorizontalAlignment="Center"
						   Margin="0 0 0 25"/>

				<TextBlock Text="Happy"
						   Background="Yellow"
						   Foreground="Black"
						   FontSize="20"
						   FontWeight="SemiBold"
						   FontFamily="Montserrat"
						   Padding="12 8 12 8"
						   Margin="0 0 0 5"/>

				<TextBox x:Name="txtUser"
						 Text="{Binding Username}"/>

				<customcontrols:BindablePasswordBox Password="{Binding Password}"/>


			</StackPanel>

		</Grid>
	</Border>
</Window>
